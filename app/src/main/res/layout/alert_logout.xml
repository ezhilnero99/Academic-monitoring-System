<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/sharpy_box"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/searchRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/noTV"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            android:layout_marginRight="4dp"
            android:text="No"
            android:textSize="20dp"
            android:textColor="@color/gray_dark"
            android:fontFamily="@font/arima"/>


        <TextView
            android:id="@+id/yesTV"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            android:layout_marginRight="65dp"
            android:fontFamily="@font/arima"
            android:textColor="@color/gray_dark"
            android:textSize="20dp"
            android:text="Yes"/>

        <ImageView
            android:id="@+id/logoIV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            app:srcCompat="@drawable/warning" />

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/logoIV"
            android:fontFamily="@font/thin_block"
            android:text="Log Out ?"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/addressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTV"
            android:layout_toRightOf="@id/logoIV"
            android:fontFamily="@font/arima"
            android:text="Are you sure you want to log out"
            android:textColor="@color/matt_gray"
            android:textSize="13dp" />

    </RelativeLayout>

</LinearLayout>