<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homeui"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dpIV"
        android:layout_width="70dp"
        android:src="@drawable/book"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:id="@+id/settingIV"
        android:src="@drawable/setting"
        android:tint="@color/shiny_blue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dpIV"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LL1_L1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/line"
                android:tint="@color/classy_purple" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:src="@drawable/gps"
                    android:tint="@color/classy_purple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/arima"
                    android:text="School Finder "
                    android:textColor="@color/black"
                    android:textStyle="italic|bold"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL1_L2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/line"
                android:tint="@color/good_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:src="@drawable/list"
                    android:tint="@color/good_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/arima"
                    android:text="List Of Schools "
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL1_L3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/line"
                android:tint="@color/cute_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:src="@drawable/doc"
                    android:tint="@color/cute_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/arima"
                    android:text="Official Reports "
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL1_L4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/line"
                android:tint="@color/hot_orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ana_doc"
                    android:tint="@color/hot_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/arima"
                    android:text="Analysed Reports "
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="italic|bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>